[alias]
	lo = log --oneline
	co = checkout
	cob = checkout -b
	cm = !git add -A && git commit -m
	ss = status -s
	bl = branch --list
	pg = "!git log --decorate --graph --oneline --all -n $(expr $(tput lines) / 2)"
	pgl = "!git log --decorate --graph --oneline --all"
