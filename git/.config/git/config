[user]
	email = sean@baildon.co
	name = Sean Baildon
[core]
	excludesfile = ~/.config/git/ignore
	editor = nvim
[color]
	ui = auto
[alias]
	lo = log --oneline
	co = checkout
	cob = checkout -b
	cm = !git add -A && git commit -m
	ss = status -s
	bl = branch --list
	pg = log --graph --abbrev-commit --decorate --format=format:'%C(bold yellow)%h%C(reset)%C(bold green)%d%C(reset) %C(white)%s%C(reset)%C(dim white) %an (%ar) %C(reset)' --all
